<p id="notice"><%= notice %></p>

<ul>
<p>
  <strong>Group Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Group User Name:</strong>
  <% @group.users.each do |user| %>
  <li>
    <%= user.name %>
  </li>
<% end %>
</p>

<% if !current_user.groups.include?(@group) %>
  <%= form_tag add_user_to_group_path(@group) do %>
    <button type="submit" class="btn btn-lg">Join</button>
  <% end %>
<% else %>
  <!-- 여기서 creator가 떠날 수 있게 해야 하는가? -->
  <%= form_tag remove_user_from_group_path(@group) do %>
    <%= link_to "Leave", { :action => "remove_user_from_group" }, class: "btn btn-lg", method: "delete", data: { confirm: "Are you sure??" } %>
  <% end %>
<% end %>

<% if can? :manage, @group %>
  <%= link_to 'Edit', edit_group_path(@group) %> |
<% end %>
<%= link_to 'Back', groups_path %>
