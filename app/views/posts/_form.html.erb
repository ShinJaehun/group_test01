<%#= form_for(Post.new) do |form| %>
<%= form_for(@post) do |form| %>
  <%= hidden_field_tag :type, 'user' %>
  <%= hidden_field_tag :receiver_id, current_user.id %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
